{
  "name": "open-once-extension",
  "displayName": "Open Files Once",
  "description": "Automatically opens specified files and allows opening a specific file with a command.",
  "version": "0.0.2",
  "engines": { "vscode": "^1.50.0" },
  "activationEvents": ["onStartupFinished", "onCommand:openOnce.openFile"],
  "main": "./extension.js",
  "contributes": {
    "commands": [
      {
        "command": "openOnce.openFile",
        "title": "Open a File Once",
        "category": "OpenOnce"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Open Once Extension",
      "properties": {
        "openOnce.files": {
          "type": "array",
          "description": "List of files to open once when this workspace is first launched",
          "default": ["README.md"]
        }
      }
    }
  },
  "categories": ["Other"]
}
